DOMAIN_NAME=tmitsuya.42.fr
COMPOSE_PROJECT_NAME=inception
HOST_DB_PATH=/home/tmitsuya/data
COMPOSE_BAKE=true

# Nginx SETUP
DOCUMENT_ROOT_HTTP=/var/www/html
DOCUMENT_ROOT_WP=$DOCUMENT_ROOT_HTTP/wordpress
DOCUMENT_ROOT_ADMINER=$DOCUMENT_ROOT_HTTP/adminer

# Mariadb SETUP
MARIADB_USER=wp_user
MARIADB_DATABASE=wordpress
MARIADB_PASSWORD_FILE=/run/secrets/db_password
MARIADB_ROOT_PASSWORD_FILE=/run/secrets/db_root_password
MARIADB_VOLUME=/var/lib/mysql

# Wordpress SETUP
WP_DB_USER=wp_user
WP_DB_NAME=wordpress
WP_DB_PASSWORD_FILE=/run/secrets/db_password
WP_DB_HOST=mariadb
WP_VOLUME=$DOCUMENT_ROOT_WP
WP_SITEURL=$DOMAIN_NAME
WP_SITE_TITLE=tmitsuya_wordpress
WP_ADMIN_NAME=wp_controller
WP_ADMIN_PASSWORD_FILE=/run/secrets/wp_admin_password
WP_ADMIN_EMAIL=admin@example.com
WP_USER_NAME=tmitsuya
WP_USER_PASSWORD_FILE=/run/secrets/wp_user_password
WP_USER_ROLE=editor
WP_USER_EMAIL=user@example.com

# Adminer SETUP
ADMINER_VOLUME=$DOCUMENT_ROOT_ADMINER

# FTP server SETUP
FTP_VOLUME=/var/ftp